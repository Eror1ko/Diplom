<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.SixthFragment"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="721dp"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/rectanglecircle"
            android:backgroundTint="@color/backgroudcolor">

            <TextView
                android:layout_width="261dp"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:text="Ваш профиль "
                android:textColor="@color/orange"
                android:textStyle="italic"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="464dp"
            android:gravity="center"
            android:orientation="vertical">

<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Ваша фотография"-->
<!--                android:textColor="@color/orange"-->
<!--                android:textStyle="bold"/>-->

<!--            <ImageButton-->
<!--                android:layout_width="150dp"-->
<!--                android:layout_height="150dp"-->
<!--                android:scaleType="centerCrop"-->
<!--                android:src="@drawable/flag" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ваше имя:"
                android:textColor="@color/orange"
                android:textStyle="bold" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Здесь ваше имя"
                android:textColor="@color/black"
                android:id="@+id/editName"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ваша эл.почта"
                android:textColor="@color/orange"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="ваша почта"
                android:gravity="center"
                android:textColor="@color/black"
                android:id="@+id/mailTxt"/>


        </LinearLayout>

        <Button
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="Сохранить"
            android:layout_gravity="center"
            android:background="@color/backgroudcolor"/>

    </LinearLayout>


</FrameLayout>